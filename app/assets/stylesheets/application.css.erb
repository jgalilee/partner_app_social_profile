@font-face {
  font-family: "Proxima Nova Alt Bold";
  src: url(<%= font_path('ProximaNovaA-Bold.otf') %>);
}

@font-face {
  font-family: "Proxima Nova Alt Semibold";
  src: url(<%= font_path('ProximaNovaA-Semibold.otf') %>);
}

@font-face {
  font-family: "Proxima Nova Alt Regular";
  src: url(<%= font_path('ProximaNovaA-Regular.otf') %>);
}

@font-face {
  font-family: "Proxima Nova Alt Light";
  src: url(<%= font_path('ProximaNovaA-Light.otf') %>);
}

@font-face {
  font-family: "Proxima Nova Alt Thin";
  src: url(<%= font_path('ProximaNovaA-Thin.otf') %>);
}

#profile-card {
  margin: 32px;
  padding: 32px;
  background: #CFCFCF;
  color: #000000;
}

#profile-card .profile-picture {
  display: inline-block;
  padding: 32px;
}

#profile-card .profile-social-basics {
  display: inline-block;
  line-height: 12px;
}

#profile-card .profile-salesforce-basics {
  display: block;
  line-height: 12px;
}

#profile-card .profile-salesforce-basics .address-label {
  display: inline-block;
  font-style: bold;
}

#profile-card .profile-salesforce-basics .address-content {
  display: inline-block;
  font-style: italic;
}

#profile-card .profile-controls {
  text-align: right;
}

#profile-card .profile-controls .button {
  padding: 12px;
  margin-bottom: 21px;
  border: 1px solid #FFFFFF;
  background: #FFFFFF;
  color: #000000;
  text-decoration: none;
}
