html {
  background: url(<%= asset_url("background.png") %>) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

body {
  font-family: "Proxima Nova Alt Regular";
  letter-spacing: 2px;
}

#login-form-container {
  padding: 5% 0;
}

#login-form-container #login-form-center {
  padding: 10% 0;
}

#login-form {
  border-left: solid 1.5px rgb(255, 255, 255);
  padding-left: 15px;
  color: rgb(255, 255, 255);
  text-transform: uppercase;
  padding-bottom: 70px;
  max-width: 320px;
  min-width: 320px;
  width: 320px;
  max-height: 194px;
  min-height: 194px;
  height: 194px;
  margin: auto;
}

#login-form h1,
#login-form h2 {
  font-size: 22pt;
  margin: 0px;
  letter-spacing: 5.13px;
}

#login-form h1 {
  font-family: "Proxima Nova Alt Bold";
  font-weight: bold;
  line-height: 23px;
}

#login-form h2 {
  font-weight: lighter;
  font-family: "Proxima Nova Alt Thin";
  margin-bottom: 48px;
  line-height: 48px;
}

#login-form .button {
  padding: 10px;
  background: #ffffff;
  border-radius: 8px;
  font-family: Proxima Nova Alt Thin;
  font-size: 13px;
  letter-spacing: 1.85px;
  text-decoration: none;
  color: rgb(80,227,194);
  padding-right: 18px;
  padding-left: 18px; 
  box-shadow: 0px 0px 4px rgb(153,153,153);
}

#login-form .button img {
  position: relative;
  top: 7px;
  width: 11px;
  left: -5px;
  border-right: solid 1px rgb(246, 246, 246);
  padding-right: 15px;
}
