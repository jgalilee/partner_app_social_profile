html {
  background: url(<%= asset_url("background.png") %>) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

body {
  font-family: "Proxima Nova Alt Regular";
  letter-spacing: 2px;
}

#message-box-container {
  padding: 5% 0;
}

#message-box-container #message-box-center {
  padding: 10% 0;
}

#message-box {
  color: rgb(255, 255, 255);
  text-transform: uppercase;
  padding-bottom: 70px;
  max-width: 600px;
  min-width: 600px;
  max-height: 400px;
  min-height: 400px;
  height: 194px;
  margin: auto;
  background: rgb(255, 255, 255);
  text-align: center;
  font-size: 18pt;
  font-family: "Proxima Nova Alt Bold";
  letter-spacing: 3.1px;
}

#message-box {
  border: 1px solid rgb(170, 170, 170);
  border-radius: 7px;
  box-shadow: 0px 0px 7px rgb(153,153,153);
}

#message-box .title {
  border-radius: 7px 7px 0px 0px;
  padding-top: 90px;
  height: 90px;
  font-size: 24pt;
}

#message-box.success .title {
  background: rgb(80, 227, 194);
}

#message-box.notice .title {
  background: rgb(255, 183, 0);
}

#message-box.error .title {
  background: rgb(219, 60, 52);
}

#message-box.setup .title {
  background: rgb(80, 100, 160);
}

#message-box .content {
  border-radius: 0px 0px 7px 7px;
  color: rgb(170, 170, 170);
  padding-top: 60px;
  margin: 60px;
  font-size: 12pt;
  font-family: "Proxima Nova Alt Regular";
}

#message-box a {
  color: rgb(255, 255, 255);
  position: relative;
  float: right;
  text-decoration: none;
  padding: 10px;
}

#message-box.setup {
  padding: 0px;
}

#message-box.setup label {
  padding: 0px;
  color: rgb(100, 100, 100);
  font-family: "Proxima Nova Alt Bold";
}

#message-box.setup .content {
  text-align: left;
  padding: 0px;
  margin-top: 30px;
  text-transform: none;
}

#message-box.setup img.figure {
  width: 480px;
}

#message-box.setup .step {
  padding-bottom: 36px;
  letter-spacing:  2px;
}

#message-box.setup .step h1 {
  font-size: 18pt;
  padding-bottom: 8px;
  border-bottom: 1px solid rgb(170, 170, 170);
}

#message-box.setup {
  height: 100%;
  max-height: none;
}

#message-box.setup .step.final {
  margin-top: 60px;
  text-align: center;
}

#message-box.setup .step.final .button {
  background: rgb(80, 100, 160);
  border: none;
  padding: 16px 32px 16px 32px;
  font-size: 14pt;
  font-family: "Proxima Nova Alt Regular";
  color: rgb(255,255,255);
  border-radius: 5px;
}

#message-box.setup .errors {
  color: rgb(219, 60, 52);
  padding-bottom: 128px;
}
